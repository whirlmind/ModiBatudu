<?xml version="1.0"?>
<NetBatudu_Config>

	<!-- Which file's Last-Modified-Date-Time should I check to run the batch file/do file updates ? --> 
	<File_To_Check_Last_Modi>Sample_FileToCheck_LastModi.txt</File_To_Check_Last_Modi>
	
	<!-- Files should be updated how often ? .Must be a positive integer--> 	
	<Age_In_Minutes>0</Age_In_Minutes>
	
	<!-- How often should the user be alerted.? (To avoid multiple annoying alerts) .Must be a positive integer--> 	
	<Alert_Frequency_In_Minutes>0</Alert_Frequency_In_Minutes>	
	
<!-- Try to open the page in this URL to check if internet connection exists .Must be a valid URL. --> 
	<Check_URL>http://www.google.com</Check_URL>
	
	<!-- Setting can be 0 or 1. If set to 1, a random GUID is added to the URL parameters to avoid cached pages. -->
	<Add_UUID_To_Skip_Caching>0</Add_UUID_To_Skip_Caching>	
	
	<!-- Timeout (in seconds) for the web page opening attempt .Must be a positive integer--> 	
	<TimeOut_In_Seconds>1</TimeOut_In_Seconds>
	
	<!-- If and when the page is opened, look for the following word in the web page --> 		
	<!-- Optional, can be left blank. If left blank, page opening is considered success enough. --> 			
	<Word_To_Find_In_Page>cookie</Word_To_Find_In_Page>			
	
	<!-- If page opening is successful and the required keyword is found, run the following batch file.  
		Must be a valid file name with full path. 
		Alternatively, can be just a file name, lying in the path where application is running from. --> 				
	<Batch_FileName_WithPath_If_Connection_Successful>SampleBatFile_ConnSuccess.bat</Batch_FileName_WithPath_If_Connection_Successful>
	
	<!-- Setting can be 0 or 1. 
	After the job is done/aborted, should I wait for user acknolwedgement saying 'Press any key to continue..'--> 					
	<Wait_On_Finish>0</Wait_On_Finish>
	
</NetBatudu_Config>